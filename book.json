{
    "root": "./docs",
    "title": "Awesome Frontend Handbook",
    "language" : "zh-hans",
    "author" : "lihxhit",
    "description" : "学习笔记",
    "structure": {
      "readme": "README.md"
    },
    "plugins": [
      "-highlight",
      "-lunr",
      "-search",
